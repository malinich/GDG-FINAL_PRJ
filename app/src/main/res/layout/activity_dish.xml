<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.hycorie.dev.gdg_final_prj.DishActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dish_passion_fruit_tibet"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/dish_name"
            android:text="Passion fruit something aka mydir"
            android:paddingLeft="8dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <TextView
                android:paddingTop="8dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Рейтинг:"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/dish_score"
                android:text="5"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                />

            <ImageView
                android:id="@+id/_score"
                android:paddingLeft="8dp"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:paddingTop="@dimen/vertical_margin"
        android:paddingLeft="@dimen/vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Описание:"/>

    <TextView
        android:paddingLeft="@dimen/vertical_margin"
        android:paddingTop="@dimen/margin_half"
        android:id="@+id/dish_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingLeft="@dimen/vertical_margin"
        android:paddingTop="@dimen/vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Ингредиенты:"/>

    <ListView
        android:paddingLeft="@dimen/vertical_margin"
        android:id="@+id/dish_ingredients_vert"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="4dp"
        android:background="#80f0efef">

        <ImageView
            android:id="@+id/ingredient_item_image"
            android:src="@drawable/ingredient_banana"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

        <TextView android:id="@+id/ingredient_item_name"
                  android:text="banana"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:textAppearance="?android:attr/textAppearanceListItemSmall"
                  android:gravity="center_vertical"
                  android:minHeight="?android:attr/listPreferredItemHeightSmall"
                  android:layout_marginLeft="16dp"
                  android:layout_toRightOf="@+id/ingredient_item_image"
                  android:layout_toEndOf="@+id/ingredient_item_image"/>
    </RelativeLayout>
</LinearLayout>
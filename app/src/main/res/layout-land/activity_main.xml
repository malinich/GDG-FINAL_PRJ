<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@android:color/white">



            <android.support.v7.widget.GridLayout
                xmlns:grid="http://schemas.android.com/apk/res-auto"
                android:layout_weight="1"
                android:id="@+id/choice_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="4dp"

                grid:alignmentMode="alignBounds"
                grid:columnCount="1"
                grid:rowCount="6"
                grid:rowOrderPreserved="false"
                grid:useDefaultMargins="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageView1"

                    grid:layout_row="0"
                    grid:layout_column="0"
                    grid:layout_columnWeight="1"
                    android:src="@android:drawable/sym_def_app_icon"
                    grid:layout_gravity="left"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageView2"
                    grid:layout_row="2"
                    grid:layout_column="0"
                    grid:layout_columnWeight="1"
                    android:src="@android:drawable/sym_def_app_icon"
                    grid:layout_gravity="left"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageView3"
                    grid:layout_row="4"
                    grid:layout_column="0"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="left|center"
                    android:src="@android:drawable/sym_def_app_icon"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_1"
                    style="?android:attr/spinnerItemStyle"
                    grid:layout_row="1"
                    android:spinnerMode="dialog"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:tag="imageView1"
                    android:gravity="center"
                    grid:layout_gravity="fill_vertical"
                    android:text="[Select a Food...]"
                    grid:layout_column="0"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:id="@+id/spinner_2"
                    android:tag="imageView2"
                    android:gravity="center"
                    grid:layout_row="3"
                    grid:layout_gravity="fill_vertical"
                    grid:layout_column="0"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:id="@+id/spinner_3"
                    android:tag="imageView3"
                    android:gravity="center"
                    grid:layout_row="5"
                    grid:layout_gravity="fill_vertical"
                    grid:layout_column="0"/>
            </android.support.v7.widget.GridLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray">

        </View>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/dish_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>